<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_viewf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.cob_3.ViewF"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/coner4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/btnviewf_1"
            android:background="@drawable/coner4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="나"
                android:textSize="40dp"
                android:textColor="#111111"
                android:gravity="center"
                android:background="@drawable/animation_1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/btnviewf_2"
            android:background="@drawable/coner4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="너"
                android:textSize="40dp"
                android:textColor="#111111"
                android:gravity="center"
                android:background="@drawable/animation_1"
                android:id="@+id/textView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/btnviewf_3"
            android:background="@drawable/coner4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="전송"
                android:textSize="40dp"
                android:textColor="#111111"
                android:gravity="center"
                android:background="@drawable/animation_1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame_viewf">

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
